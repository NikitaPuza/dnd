<h1>{{character.objectID}}</h1>

<a href="/">back to character select</a>
<button class="edit-position">Edit Position</button>
<button class="save-position hidden">Save Position</button>
<div id="grid-snap">

    <div class="info-panel panel-default" data-x="{{{character.positions.infodatax}}}" data-y="{{{character.positions.infodatay}}}" style="{{{character.positions.infostyle}}}">
        <div class="panel-body">
            <div class="row info">
                <div class="col-md-2">
                    <div class="info-label">Class</div>
                    <input type="text" id="class" class="info-content" value={{character.class}}>
                </div>
                <div class="col-md-2">
                    <div class="info-label">Race</div>
                    <input type="text" id="race" class="info-content" value={{character.race}}>
                </div>
                <div class="col-md-2">
                    <div class="info-label">Level</div>
                    <input type="text" id="level" class="info-content" value={{character.level}}>
                </div>
                <div class="col-md-2">
                    <div class="info-label">Armor Class</div>
                    <input type="text" id="armor-class" class="info-content"
                           value={{character.armorClass}}>
                </div>
                <div class="col-md-2">
                    <div class="info-label">Spell Save</div>
                    <input type="text" id="spell-save" class="info-content"
                           value={{character.spellSave}}>
                </div>
                <div class="col-md-2">
                    <div class="info-label">Initiative</div>
                    <input type="text" id="initiative" class="info-content"
                           value={{character.initiative}}>
                </div>
            </div>
        </div>
    </div>


    <div class="panel-default hp-panel" data-x="{{{character.positions.hpdatax}}}" data-y="{{{character.positions.hpdatay}}}" style="{{{character.positions.hpstyle}}}">
        <div class="panel-body">
            <div class="row hp">
                <div class="col-hp-1">
                    <div class="info-label">Hit Points</div>
                    <input type="text" id="hit-points" class="info-content"
                           value={{character.hitPoints}}>
                </div>
            </div>
        </div>
    </div>


    <div class="panel-default st-panel" data-x="{{{character.positions.stdatax}}}" data-y="{{{character.positions.stdatay}}}" style="{{{character.positions.ststyle}}}">
        <div class="panel-body">
            <div class="skill row">
                <div class="col-tbl-1">
                    <div class="info-label">Saving Throws</div>
                    <table class="skill-table">
                        {{#eachProperty character.savingThrows}}
                            <tr>
                                <td class="skill-name">{{property}}</td>
                                <td><input class="skill-value" id="{{{property}}}" type="text" value={{value}}></td>
                            </tr>
                        {{/eachProperty}}
                    </table>
                </div>
            </div>
        </div>
    </div>


    <div class="panel-default atr-panel" data-x="{{{character.positions.atrdatax}}}" data-y="{{{character.positions.atrdatay}}}" style="{{{character.positions.atrstyle}}}">
        <div class="panel-body">
            <div class="ability row">
                <div class="col-tbl-1">
                    <div class="info-label">Ability scores <button class="submit{{{character.objectID}}}" type="submit"></button></div>
                    <table class="ability-table">
                        {{#eachProperty character.attributes}}
                            <tr>
                                <td class="skill-name">{{property}}</td>
                                <td><input class="skill-value" id="{{{property}}}" type="text" value={{value}}></td>
                            </tr>
                {{/eachProperty}}
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-default skills-panel" data-x="{{{character.positions.skillsdatax}}}" data-y="{{{character.positions.skillsdatay}}}" style="{{{character.positions.skillsstyle}}}">
        <div class="panel-body">
            <div class="skill row">
                <div class="col-tbl-1">
                    <div class="info-label">Skills</div>
                    <table class="skill-table">
                        {{#eachProperty character.skills}}
                            <tr>
                                <td class="skill-name">{{property}}</td>
                                <td><input class="skill-value" id="{{{property}}}" type="text" value={{value}}></td>
                            </tr>
                        {{/eachProperty}}
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
</div>
</div>